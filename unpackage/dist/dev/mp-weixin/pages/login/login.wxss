.msg_box {
  width: calc(100% - 224rpx);
  margin-left: 80rpx;
  display: flex;
  align-items: center;
  margin-top: 48rpx;
  padding: 0 32rpx;
  background: #fff;
  border-radius: 60rpx;
}
.msg_box > label {
  height: 48rpx;
  line-height: 48rpx;
  width: 150rpx;
  font-size: 28rpx;
}
.msg_box > view {
  font-size: 20rpx;
  margin-left: 10rpx;
  width: calc(100% - 390rpx);
  text-align: center;
  color: #007AFF;
}
.msg_box > input {
  width: 220rpx;
  height: 88rpx;
  border-left: 1px solid #f7f7f7;
  padding: 0px 30rpx;
  font-size: 28rpx;
}
.msg_box > input:nth-child(2) {
  padding-right: 0;
  border-right: 1px solid #f7f7f7;
}
.rule_box label {
  color: #ffaa00;
}
.rule_box .cehck {
  background-color: #ffd200;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 0 1px #ffd200 !important;
}
.rule_box .cehck::before {
  content: '';
  width: 40%;
  height: 40%;
  border-radius: 50%;
  background-color: white;
}
.rule_box > view:first-child {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  box-shadow: 0 0 0 1px #999999;
  margin-right: 20rpx;
}
.rule_box {
  width: calc(100% - 160rpx);
  margin-left: 80rpx;
  font-size: 24rpx;
  color: #838383;
  display: flex;
  align-items: center;
  margin-top: 50rpx;
}
.show_resegist {
  width: calc(100% - 160rpx);
  margin-left: 80rpx;
  text-align: right;
  font-size: 26rpx;
  color: #999999;
  margin-top: 30rpx;
}
.show_resegist > label {
  color: #ffd200;
  margin: 0px 10rpx;
}
.login_title {
  text-align: center;
  font-weight: bold;
  font-size: 58rpx;
  padding-top: 160rpx;
  padding-bottom: 88rpx;
  color: rgba(33, 33, 33, 0.6);
}
.item {
  display: flex;
  background-color: white;
  width: calc(100% - 220rpx);
  margin-left: 80rpx;
  margin-top: 48rpx;
  align-items: center;
  padding: 0 30rpx;
  border-radius: 60rpx;
}
.item > label {
  height: 48rpx;
  line-height: 48rpx;
  width: 140rpx;
  font-size: 30rpx;
}
.item > input {
  height: 88rpx;
  width: calc(100% - 200rpx);
  border-left: 1px solid #f7f7f7;
  padding: 0px 30rpx;
  font-size: 28rpx;
}
.btn_box {
  width: calc(100% - 160rpx);
  margin-left: 80rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  background-color: #ffd200;
  margin-top: 60rpx;
  border-radius: 44rpx;
}
.logo {
  margin-top: 350rpx;
}
.logo .img {
  margin: 0 auto;
  width: 150rpx;
  height: 150rpx;
}
.logo .img image {
  width: 100%;
  height: 100%;
}
.logo .title {
  text-align: center;
  margin-top: 20rpx;
}
.btn_box_wx {
  width: 580rpx;
  margin: 0 auto;
  margin-top: 100rpx;
}
.btn_box_wx .btn {
  text-align: center;
  border-radius: 10rpx;
  line-height: 2.8;
}
.btn_box_wx .wx {
  color: #fff;
  background-color: #60ca88;
}
.btn_box_wx .white {
  font-size: 24rpx;
  color: #555;
}
.foot {
  width: 100%;
