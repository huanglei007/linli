.pageTitle {
  font-size: 32rpx;
  font-weight: bold;
}
.operation {
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
}
.operation .backs {
  padding: 0 20rpx;
}
.operation .backs image {
  width: 40rpx;
  height: 40rpx;
}
.operation .searchBox {
  background-color: #fff;
  border-radius: 30rpx;
  line-height: 2;
  padding: 10rpx 20rpx;
  width: 600rpx;
}
.operation .searchBox image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 20rpx;
}
.operation .searchBox input {
  width: 450rpx;
}
.operation .searchBox .btn {
  width: 130rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 30rpx;
  line-height: 2;
  margin-left: 20rpx;
}
.operation .add-btn {
  width: 50rpx;
}
.operation .add-btn image {
  width: 40rpx;
  height: 40rpx;
}
.content {
  padding-bottom: 150rpx;
}
.content .toptype {
  background: #FFF;
  position: relative;
}
.content .baidi {
  width: 100%;
  background: #FFF;
}
.content .baidi .toptit {
  height: 80rpx;
}
.content .baidi .toptit .title {
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: bold;
  margin-left: 34rpx;
}
.content .peops .kong {
  margin: 80rpx auto;
}
.content .peops .kong image {
  width: 480rpx;
  height: 330rpx;
}
.content .peops .kong view {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  margin-top: 10rpx;
}
.content .peops .list:last-child .texright {
  border-bottom: none;
}
.content .peops .list {
  background: #FFF;
  padding: 26rpx 30rpx 0;
  padding-right: 0;
}
.content .peops .list .lefimg {
  width: 88rpx;
  height: 88rpx;
  position: relative;
}
.content .peops .list .lefimg image {
  width: 100%;
  height: 100%;
}
.content .peops .list .lefimg .num {
  width: 45rpx;
  line-height: 45rpx;
  padding: 5rpx;
  background: #FF3709;
  border-radius: 50%;
  position: absolute;
  right: -15rpx;
  top: -15rpx;
  font-size: 24rpx;
}
.content .peops .list .lefimg .dian {
  width: 20rpx;
  height: 20rpx;
  background: #FF3709;
  border-radius: 50%;
  position: absolute;
  right: -8rpx;
  top: -8rpx;
}
.content .peops .list .texright {
  width: 83%;
  padding-bottom: 34rpx;
  border-bottom: 1rpx solid rgba(229, 229, 229, 0.7);
  position: relative;
}
.content .peops .list .texright .nickname {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.content .peops .list .texright .title {
  width: 85%;
  color: #B3B3B3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
}
.content .peops .list .texright .tima {
  font-size: 20rpx;
  position: absolute;
  right: 31rpx;
  top: 0;
}

