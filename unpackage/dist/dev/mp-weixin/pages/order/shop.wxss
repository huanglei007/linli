.head {
  padding: 20rpx 0;
}
.head .left {
  font-size: 32rpx;
  font-weight: bold;
}
.head .left image {
  margin-right: 10rpx;
}
.typeBox {
  width: 400rpx;
  margin: 30rpx auto;
}
.typeBox .item {
  width: 45%;
  background-color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  opacity: .3;
  line-height: 2;
  text-align: center;
}
.typeBox .item.active {
  opacity: 1;
}
.content {
  padding-bottom: 200rpx;
}
.content .form {
  margin: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.content .form .title {
  font-size: 30rpx;
  font-weight: bold;
  padding: 20rpx 40rpx 10rpx;
}
.content .form .item {
  padding: 10rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
  line-height: 80rpx;
  width: 100%;
  box-sizing: border-box;
}
.content .form .item .label {
  color: #888;
}
.content .form .item .label text {
  font-size: 24rpx;
}
.content .form .item:last-child {
  border-bottom: 1rpx solid #fff;
}
.content .form .item view {
  font-size: 28rpx;
}
.content .form .item .input {
  width: 400rpx;
}
.content .form .item .textarea {
  height: 200rpx;
  padding: 20rpx 0;
}
.content .form .item .text image {
  width: 36rpx;
  margin-left: 20rpx;
}
.content .form .item.name input {
  width: 200rpx;
}
.content .form .time {
  padding: 10rpx 40rpx;
}
.content .form .time .timeItem {
  padding: 20rpx;
  width: 230rpx;
  background-color: #f6f6f6;
  text-align: center;
  position: relative;
}
.content .form .time .timeItem::before {
  content: '';
  position: absolute;
  display: block;
  width: 14rpx;
  height: 22rpx;
  right: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  background-image: url(data:image/png;base64,);
  background-size: cover;
}
.content .form .time .timeItem .uni-input {
  color: #888;
  line-height: 2;
}
.content .form .address {
  padding: 20rpx 30rpx;
}
.content .form .address image {
  width: 100%;
  margin-top: 10rpx;
}
.content .form .address .icon {
  width: 50rpx;
}
.content .form .address .more {
  width: 30rpx;
}
.content .form .address .text {
  width: 500rpx;
  font-size: 28rpx;
}
.content .form .gender {
  padding: 0 20rpx;
  width: 240rpx;
}
.content .form .gender view {
  margin: 0;
  font-size: 24rpx;
}
.content .out {
  display: flex;
  flex-wrap: wrap;
}
.content .out .peop {
  width: 154rpx;
  height: 154rpx;
  margin: 20rpx 0;
  margin-right: 12rpx;
  position: relative;
}
.content .out .peop image, .content .out .peop video {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.content .out .peop .del {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 2rpx;
  right: 2rpx;
}
.foot {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 1vh 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.foot image {
  width: 40rpx;
}
.foot .cost {
  font-size: 28rpx;
  margin-right: 20rpx;
}
.foot .cost text {
  font-size: 32rpx;
  margin-left: 20rpx;
}
.foot .btn {
  line-height: 5vh;
  font-size: 32rpx;
  background-image: linear-gradient(to right, #f9db58, #f5c353);
  border-radius: 10rpx;
  padding: 0 70rpx;
}

