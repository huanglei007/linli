.typeBox2 {
  width: 400rpx;
  margin: 30rpx auto;
}
.typeBox2 .item {
  width: 45%;
  background-color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  opacity: .6;
  line-height: 2;
  text-align: center;
  border: 1px solid #ccc;
  border-radius: 20rpx;
}
.typeBox2 .item.active {
  opacity: 1;
}
.content {
  padding-bottom: 100rpx;
}
.content .form {
  margin: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.content .form .item {
  padding: 20rpx 40rpx;
}
.content .form .item .textarea {
  height: 100rpx;
}
.content .form .item .label {
  width: 80px;
}
.content .form .item .time {
  flex: 1;
}
.content .form .item .uni-input {
  font-weight: 300;
  padding-left: 20rpx;
  color: #878787;
}
.content .form .address {
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.content .form .address image {
  width: 100%;
  height: 50rpx;
}
.content .form .address .icon {
  width: 50rpx;
  height: 50rpx;
}
.content .form .address .more {
  width: 30rpx;
}
.content .form .address .text {
  width: 500rpx;
  font-size: 28rpx;
  color: #808080;
}
.content .wx_form {
  padding: 0 40rpx;
}
.content .out {
  display: flex;
  flex-wrap: wrap;
}
.content .out .peop {
  width: 154rpx;
  height: 154rpx;
  margin: 20rpx 0;
  margin-right: 12rpx;
  position: relative;
}
.content .out .peop image,
.content .out .peop video {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.content .out .peop .del {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 2rpx;
  right: 2rpx;
}
.foot {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 2vh 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  box-shadow: 0px 6rpx 30rpx #888888;
}
.foot .cost {
  font-size: 28rpx;
}
.foot .cost text {
  font-size: 32rpx;
  margin: 0 10rpx;
}
.foot .btn {
  line-height: 5vh;
  font-size: 32rpx;
  background-image: linear-gradient(to right, #f9db58, #f5c353);
  border-radius: 10rpx;
  padding: 0 70rpx;
}

