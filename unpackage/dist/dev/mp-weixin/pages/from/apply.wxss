.content {
  position: relative;
}
.content .head {
  background-color: #FFD200;
  position: relative;
  padding-top: 88rpx;
}
.content .head .left {
  font-size: 32rpx;
  font-weight: bold;
}
.content .head .left image {
  margin-right: 10rpx;
}
.typeBox {
  background-color: #FFD200;
  padding: 30rpx 0;
}
.typeBox .item {
  text-align: center;
  font-size: 28rpx;
  flex: 0 0 20%;
  line-height: 2;
  position: relative;
}
.typeBox .item.active {
  font-size: 32rpx;
  font-weight: bold;
}
.typeBox .item.active::before {
  content: '';
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  display: block;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: cover;
  left: 50%;
  bottom: -20rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.formBox {
  position: relative;
  z-index: 1;
