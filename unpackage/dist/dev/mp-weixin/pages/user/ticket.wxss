.toptype {
  border-bottom: 1rpx solid #ececec;
}
.typeBox .item {
  color: #989898;
  border: 1rpx solid #e5e5e5;
  font-size: 30rpx;
  text-align: center;
  width: 150rpx;
  line-height: 2;
}
.typeBox .item.active {
  color: #212121;
  background-color: #FFD200;
  border-color: #FFD200;
}
.statusBox {
  padding-top: 1rpx solid #F5F5F5;
  background-color: #fff;
  padding: 10rpx 0;
}
.statusBox .item {
  line-height: 100rpx;
  position: relative;
  font-size: 28rpx;
  color: #989898;
  text-align: center;
  width: 33.3%;
}
.statusBox .item .icon {
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 30rpx;
  opacity: 0;
}
.statusBox .item.active {
  font-size: 32rpx;
  color: #212121;
  font-weight: bold;
}
.statusBox .item.active .icon {
  opacity: 1;
}
.list {
  margin: 20rpx;
}
.list .item {
  background-color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}
.list .item .name {
  margin-bottom: 10rpx;
}
.list .item .more {
  width: 30rpx;
  margin-bottom: 10rpx;
}
.list .item .ticket {
  min-height: 172rpx;
  background-color: rgba(255, 88, 30, 0.1);
  padding: 0 10rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}
.list .item .ticket .left {
  width: 130rpx;
  color: #FF581E;
}
.list .item .ticket .left text {
  font-size: 46rpx;
  font-weight: bold;
}
.list .item .ticket .center {
  flex: 1;
  padding: 0 30rpx;
}
.list .item .ticket .center .title {
  color: #FF581E;
  font-size: 30rpx;
}
.list .item .ticket .center .time {
  color: #FF581E;
}
.list .item .ticket .right {
  text-align: center;
}
.list .item .ticket .right .btn {
  width: 160rpx;
  background-color: #FF581E;
  color: #fff;
  line-height: 2;
  border-radius: 30rpx;
  margin-bottom: 10rpx;
}
.list .item .ticket .right .sub {
  color: #FF581E;
}
.list .item .ticket .right image {
  width: 90rpx;
  display: none;
}
.list .item.lived .ticket, .list .item.out .ticket {
  background-color: #EBEBEB;
}
.list .item.lived .left, .list .item.out .left {
  color: #aaa;
}
.list .item.lived .center, .list .item.out .center {
  border-right: 1rpx solid #aaa;
}
.list .item.lived .center .title, .list .item.out .center .title {
  color: #aaa;
}
.list .item.lived .center .time, .list .item.out .center .time {
  color: #aaa;
}
.list .item.lived .right .btn, .list .item.out .right .btn {
  display: none;
}
.list .item.lived .right .used {
  display: block;
}
.list .item.out .right .timeout {
  display: block;
}

