page {
  height: 100%;
  background-color: #ffac46;
}
.wtbox {
  padding: 30rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.wtbox .bg {
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 30rpx;
  position: relative;
  padding: 100rpx 30rpx;
  box-sizing: border-box;
}
.wtbox .bg::before {
  content: '';
  width: 40rpx;
  height: 40rpx;
  display: block;
  border-radius: 50%;
  background-color: #ffac46;
  position: absolute;
  left: -22rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.wtbox .bg::after {
  content: '';
  width: 40rpx;
  height: 40rpx;
  display: block;
  border-radius: 50%;
  background-color: #ffac46;
  position: absolute;
  right: -22rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.wtbox .top {
  border-bottom: 1rpx solid #DCDCDC;
  text-align: center;
}
.wtbox .top .code {
  width: 280rpx;
  height: 280rpx;
}
.wtbox .top .btn {
  margin: 68rpx auto;
  line-height: 2.5;
  width: 230rpx;
  border-radius: 40rpx;
  background-color: #FFD200;
  font-size: 28rpx;
}
.wtbox .bottom {
  margin-top: 100rpx;
}
.wtbox .bottom .img {
  width: 150rpx;
