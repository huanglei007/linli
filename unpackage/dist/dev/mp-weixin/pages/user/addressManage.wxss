.toptype .titlaa {
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: bold;
  margin-left: 20rpx;
}
.row {
  padding: 0 30rpx;
  min-height: 110rpx;
  background: #fff;
  color: #888888;
}
.row .addressColor {
  color: #212121;
}
.row view {
  width: 200rpx;
  margin: auto 0;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
}
.row .input {
  flex: 1;
  font-size: 32rpx;
  color: #212121;
  margin: auto 0;
}
.row .input.gray {
  color: #808080;
}
.row .take {
  width: 85rpx;
  height: 54rpx;
  border-radius: 40rpx;
  background: #E9E9EA;
  margin: auto 0;
}
.row .take .yuan {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #C9C9C9;
  border: 1rpx solid #c9c9c9;
}
.row .takelv {
  background: #FFD200 !important;
}
.row .takelv .yuan {
  margin-left: auto;
  background-color: #fff;
}
.add-btn {
  width: 690rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #FFD200;
  border-radius: 43rpx;
  font-size: 34rpx;
  font-family: Adobe Heiti Std;
  font-weight: normal;
  margin: 200rpx auto;
}

