page {
  background-color: #f4f6fb;
}
.header {
  position: relative;
  z-index: 1;
}
.header .city {
  line-height: 30rpx;
  font-size: 34rpx;
  padding: 20rpx;
  font-weight: bold;
}
.header .city image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx;
}
.content .asdoa {
  padding: 30rpx;
  background: #FFFFFF;
  margin: 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.content .asdoa .tit image {
  width: 60rpx;
}
.content .asdoa .tit view {
  font-size: 32rpx;
  color: #212121;
  margin-left: 20rpx;
  font-weight: bold;
}
.content .titi .gray {
  font-size: 24rpx;
  margin-left: 8rpx;
}
.content .rechtype {
  width: 100%;
  height: 130rpx;
  background: #f5f5f5;
  padding: 0 30rpx;
  margin: 0 auto 40rpx;
  border-radius: 12rpx;
  line-height: 130rpx;
  box-sizing: border-box;
}
.content .rechtype input {
  margin: auto 0;
  font-size: 30rpx;
}
.content .rechtype .logo {
  width: 48rpx;
  height: 48rpx;
  margin: auto 0;
}
.content .rechtype .rifg {
  width: 20rpx;
  height: 20rpx;
  margin: auto 0;
}
.content .rechtype .titis {
  min-width: 250rpx;
  font-size: 30rpx;
  margin: 0 10rpx;
}
.content .rechtype .blue {
  font-size: 25rpx;
  font-family: PingFangSC-Regular;
  color: #4D9AFF;
}
.content .outlsit {
  margin: 30rpx;
  padding: 40rpx 68rpx;
  background: #FFF;
  border-radius: 32rpx 32rpx 0 0 !important;
}
.content .outlsit .liast {
  flex-wrap: wrap;
  padding: 30rpx 0;
}
.content .outlsit .liast .renming {
  font-size: 48rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #212121;
  margin-top: auto;
}
.content .outlsit .liast image {
  width: 76rpx;
  height: 76rpx;
  margin-left: 15rpx;
  margin-right: 30rpx;
}
.content .outlsit .liast input {
  width: 90%;
  margin-top: auto;
  /* font-size: 36rpx; */
  font-size: 56rpx;
  font-family: Source Han Sans CN;
  font-weight: bold;
}
.content .xian {
  width: 100%;
  height: 1rpx;
  background: #F1F1F1;
  margin-bottom: 31rpx;
}
.content .tips {
  margin-bottom: 20rpx;
}
.content .tips view {
  height: 30rpx;
  line-height: 30rpx;
  font-size: 25rpx;
}
.content .tips image {
  width: 24rpx;
  height: 24rpx;
  margin: auto 5rpx;
}
.content .gobuy {
  width: 100%;
  height: 98rpx;
  background: #FF3336;
  border-radius: 24rpx;
  line-height: 98rpx;
  font-size: 30rpx;
  margin: 120rpx auto 0;
}
.content .model {
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.content .model .modelBG {
  background-color: rgba(0, 0, 0, 0.2);
  width: 100%;
  height: 100%;
}
.content .model .modelContent {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 80%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  background-color: #fff;
  padding: 30rpx 60rpx;
  overflow-y: scroll;
  max-height: 400rpx;
}
.content .model .modelContent .closeBox {
  position: relative;
}
.content .model .modelContent .closeBox .modelClose {
  position: absolute;
  left: 100%;
  width: 30rpx;
}
.content .model .modelContent .closeBox .modelClose image {
  max-width: 100%;
}
.content .guize {
  color: #FF3336;
  margin-top: 20rpx;
}

