.head {
  position: relative;
}
.head .backs {
  position: absolute;
  z-index: 1;
  width: 35rpx;
  left: 20rpx;
  margin: 0;
}
.head .backs image {
  width: 100%;
}
.head .homeBg {
  width: 100%;
}
.head .homeBg image {
  width: 100%;
}
.outBox {
  margin: 30rpx;
}
.picBox {
  margin: 30rpx;
}
.picBox .title {
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.picBox .item {
  width: 45%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx 40rpx;
  box-sizing: border-box;
}
.picBox .item .uni-input {
  text-align: center;
  line-height: 2;
  font-size: 28rpx;
  color: #808080;
}
.form {
  margin: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.form .item {
  padding: 10rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
  line-height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  position: relative;
}
.form .item .right {
  position: absolute;
  right: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 24rpx;
}
.form .item .label {
  width: 130rpx;
}
.form .item .label text {
  font-size: 24rpx;
}
.form .item:last-child {
  border-bottom: 1rpx solid #fff;
}
.form .item view {
  font-size: 28rpx;
}
.form .item .input {
  width: 400rpx;
  color: #808080;
  padding-left: 20rpx;
}
.form .item .textarea {
  height: 200rpx;
  padding: 20rpx 0;
}
.form .item .text {
  color: #808080;
  padding-left: 20rpx;
}
.form .item .text image {
  width: 36rpx;
  margin-left: 20rpx;
}
.form .item .uni-input {
  color: #808080;
  padding-left: 20rpx;
}
.form .item .address {
  flex: 1;
  padding-left: 20rpx;
  color: #808080;
}
.form .item.name input {
  width: 200rpx;
}
.form .time {
  padding: 10rpx 40rpx;
}
.form .time .timeItem {
  padding: 20rpx;
  width: 230rpx;
  background-color: #f6f6f6;
  text-align: center;
  position: relative;
}
.form .time .timeItem::before {
  content: '';
  position: absolute;
  display: block;
  width: 14rpx;
  height: 22rpx;
  right: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  background-image: url(data:image/png;base64,);
  background-size: cover;
}
.form .time .timeItem .uni-input {
  color: #888;
  line-height: 2;
}
.form .gender {
  padding: 0 20rpx;
  width: 240rpx;
}
.form .gender view {
  margin: 0;
  font-size: 24rpx;
}
.out {
  display: flex;
  flex-wrap: wrap;
}
.out .peop {
  width: 154rpx;
  height: 154rpx;
  margin: 20rpx 0;
  margin-right: 12rpx;
  position: relative;
}
.out .peop image,
.out .peop video {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.out .peop .del {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 2rpx;
  right: 2rpx;
}
.foot {
  width: 70%;
  margin: 30rpx auto;
}
.foot .btn {
  background-color: #FFD200;
  line-height: 2.8;
  text-align: center;
  border-radius: 50rpx;
  font-size: 32rpx;
}

