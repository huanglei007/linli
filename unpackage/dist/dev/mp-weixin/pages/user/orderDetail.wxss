.content {
  padding: 0 25rpx 100rpx 25rpx;
}
.status-box {
  padding: 35rpx 0;
  display: flex;
  align-items: center;
}
.status-box image {
  width: 36rpx;
  height: 36rpx;
}
.status-box .font36 {
  margin-left: 10rpx;
}
.customer-box {
  padding: 25rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}
.customer-box .news-box .name,
.customer-box .news-box .phone {
  font-weight: 400;
}
.customer-box .news-box .phone {
  margin: 0 25rpx;
}
.customer-box .address-box {
  padding: 20rpx 0;
  flex-wrap: wrap;
}
.customer-box .address-box .font30 {
  flex: 1;
}
.customer-box .address-box .location-box {
  margin-left: 20rpx;
}
.customer-box .text-box {
  font-weight: 400;
}
.customer-box .text-box text:nth-child(2) {
  color: #F60000;
}
.detail-box {
  background-color: #fff;
  border-radius: 20rpx;
}
.detail-box .box-num {
  padding: 25rpx;
  border-bottom: 1px solid #E5E5E5;
}
.detail-box .box-news {
  padding: 30rpx;
}
.detail-box .box-news .news-product {
  padding-right: 22rpx;
}
.detail-box .box-news .news-product .products {
  padding-bottom: 30rpx;
}
.detail-box .box-news .news-product .products .news .products-img {
  width: 130rpx;
  height: 130rpx;
}
.detail-box .box-news .news-product .products .news .products-img image {
  width: 100%;
  height: 100%;
}
.detail-box .box-news .news-product .products .news .products-name {
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.detail-box .box-news .news-product .reduce-box {
  padding: 50rpx 0 30rpx 0;
  padding-left: 20rpx;
}
.detail-box .box-news .news-product .reduce-box ._jian {
  padding: 8rpx 12rpx;
  border-radius: 5rpx;
  background-color: #ED5637;
  color: #fff;
  margin-right: 15rpx;
}
.price-box {
  padding: 30rpx;
  border-top: 1px solid #E5E5E5;
  text-align: right;
}
.price-box .discount {
  padding-right: 22rpx;
}
.price-box .discount .already,
.price-box .discount .total {
  display: inline;
}
.price-box .discount .already .num {
  margin: 0 30rpx 0 10rpx;
}
.price-box .discount .total .num {
  margin-left: 10rpx;
}
.price-box .discount .total_between {
  display: flex;
  justify-content: space-between;
}
.price-box .handel {
  display: flex;
  padding: 60rpx 0 15rpx 0;
  justify-content: flex-end;
}
.price-box .handel text {
  width: 172rpx;
  padding: 8rpx 0;
  border-radius: 30rpx;
  border: 1px solid #CCCCCC;
  text-align: center;
  margin-right: 15rpx;
}
.time_remarks {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  margin-top: 30rpx;
}
.time_remarks .time,
.time_remarks .remarks {
  padding: 12rpx 0;
}
.contact {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-top: 30rpx;
  justify-content: center;
}
.contact image {
  margin-right: 10rpx;
}
.comment {
  border: none;
  background: linear-gradient(180deg, #F9D448 0%, #FFCA00 100%, #D8D8D8 100%);
}

