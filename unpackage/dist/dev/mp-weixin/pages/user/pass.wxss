page {
  background: #F5F5F5;
}
.content .fill {
  padding: 0 31rpx;
  position: relative;
  background: #FFF;
  border-bottom: 20rpx solid #F5F5F5;
}
.content .fill .sanhei {
  width: 200rpx;
  font-size: 28rpx;
  margin: auto 0;
}
.content .fill input {
  width: 50%;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #212121;
}
.content .fill .flexd {
  margin: auto 0;
}
.content .fill .flexd .seco {
  width: 160rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #549EFE;
  letter-spacing: 5rpx;
}
.content .fill .flexd image {
  width: 32rpx;
  height: 32rpx;
  margin: auto 10rpx;
}
.content .loginbtn button {
  width: 623rpx;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 32rpx;
  border-radius: 25rpx;
  outline: 0;
  display: block;
  margin: 0;
  font-family: inherit;
  background: #15BB86;
  margin: 100rpx auto 37rpx;
}

