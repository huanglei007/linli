.my-shop {
  display: flex;
  justify-content: space-between;
}
.my-shop .my-shop-left {
  display: flex;
  justify-content: space-between;
}
.my-shop .my-shop-left .my-shop-left-img {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.my-shop .my-shop-left .my-shop-left-img image {
  width: 100%;
  height: 100%;
}
.my-shop .my-shop-left .my-shop-left-news {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.my-shop .my-shop-left .my-shop-left-news .name text {
  font-size: 36rpx;
}
.my-shop .my-shop-left .my-shop-left-news .status text {
  font-size: 26rpx;
}
.my-shop .my-shop-left .my-shop-left-news .status .status-switch {
  padding: 8rpx 19rpx;
  border-radius: 25rpx;
  background-color: #F6F6F6;
  display: flex;
  align-items: center;
  text-align: center;
}
.my-shop .my-shop-left .my-shop-left-news .status .status-switch .switch {
  background-color: #6ED500;
  padding: 8rpx;
  border-radius: 8rpx;
}
.my-shop .my-shop-left .my-shop-left-news .status .status-switch .shut {
  background-color: red;
}
.my-shop .my-shop-left .my-shop-left-news .status .status-switch .text {
  margin-left: 15rpx;
}
.my-shop .my-shop-right .preview {
  padding: 10rpx 30rpx;
  background: linear-gradient(180deg, #FDEC7E 0%, #F9D448 100%);
  border-radius: 25rpx;
}
.view-diy {
  display: flex;
  justify-content: space-between;
}
.iconTitle,
.iconRight {
