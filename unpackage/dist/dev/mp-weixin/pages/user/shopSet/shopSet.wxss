.typeBox {
  margin-bottom: 60rpx;
}
.typeBox .item {
  color: #989898;
  border: 1rpx solid #e5e5e5;
  font-size: 30rpx;
  text-align: center;
  width: 150rpx;
  line-height: 2;
}
.typeBox .item.active {
  color: #212121;
  background-color: #FFD200;
  border-color: #FFD200;
}
.list .hide {
  display: none;
}
.list .item {
  background-color: #fff;
  border-radius: 30rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}
.list .item .icon32 {
  margin-bottom: 10rpx;
}
.list .item .itemBox {
  margin-bottom: 20rpx;
}
.list .item .input {
  width: 40%;
  background-color: #F5F5F5;
  padding: 20rpx;
  box-sizing: border-box;
}
.list .item .add {
  width: 60rpx;
}
.list .item .center {
  width: 10%;
  font-size: 30rpx;
  color: #FF581E;
  text-align: center;
}
.foot {
  width: 70%;
  margin: 50rpx auto;
}
.foot .btn {
  background-color: #FFD200;
  line-height: 2.8;
  text-align: center;
  border-radius: 50rpx;
  font-size: 32rpx;
}

