.list {
  margin-top: 30rpx;
}
.list .item {
  margin-bottom: 10rpx;
  background-color: #fff;
  padding: 30rpx;
}
.list .item .image {
  width: 150rpx;
  overflow: hidden;
  position: relative;
}
.list .item .image image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.list .item .image .renzhen {
  width: 60rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.list .item .message {
  width: 500rpx;
  margin-left: 20rpx;
}
.list .item .message .title {
  font-size: 32rpx;
  position: relative;
  width: -webkit-fit-content;
  width: fit-content;
  margin-bottom: 10rpx;
}
.list .item .message .title .tage {
  width: 35px;
  line-height: 1.3;
  padding: 0 14rpx;
  margin-left: 10rpx;
  border-radius: 10rpx;
  text-align: center;
  color: #FF7827;
  border: 1rpx solid #FF7827;
  background-color: rgba(255, 120, 39, 0.08);
}
.list .item .message .star image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}
.list .item .message .nickname {
  flex: 1;
  color: #888;
}
.list .item .message .price {
  color: #888;
}
.list .item .message .range {
  color: #888;
}
.list .item .message .range image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 6rpx;
}
.list .item .message .mgb {
  margin-bottom: 10rpx;
}
.list .item .message .text {
  color: #888;
  max-width: 400rpx;
}
.list .item .message .voucher {
  flex-wrap: wrap;
}
.list .item .message .voucher .piece {
  line-height: 2.2;
  padding: 0 40rpx;
  background-image: url(data:image/png;base64,);
  margin-right: 10rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  width: -webkit-fit-content;
  width: fit-content;
  margin-bottom: 10rpx;
  color: #FF7827;
}
.list .item .message .taketo image {
  width: 32rpx;
  height: 32rpx;
}
.list .item .message .jineng .piece {
  padding: 0 10rpx;
  color: #FF5648;
  border: 2rpx solid #FF5648;
  background-color: rgba(255, 86, 72, 0.08);
  margin-right: 20rpx;
  width: -webkit-fit-content;
  width: fit-content;
  flex-wrap: wrap;
  line-height: 1.5;
}
.list .item .message .btn {
  line-height: 2;
  font-size: 28rpx;
  padding: 0 40rpx;
  margin-left: 20rpx;
  border: 2rpx solid #aaa;
  border-radius: 30rpx;
}

