.header {
  position: relative;
  z-index: 1;
  background-color: #fff;
}
.header .city {
  line-height: 30rpx;
  font-size: 34rpx;
  padding: 20rpx;
  font-weight: bold;
}
.header .city image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx;
}
.header .village {
  line-height: 30rpx;
  font-size: 30rpx;
  padding: 20rpx 30rpx;
  color: #505050;
}
.header .village image {
  width: 20rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.total {
  margin: 30rpx 0;
  padding: 0 80rpx;
}
.total .item {
  width: 280rpx;
  text-align: center;
  border-radius: 10rpx;
  padding: 40rpx 0;
  background-color: #fff;
  position: relative;
}
.total .item .num {
  margin-bottom: 10rpx;
}
.total .item .num text {
  font-size: 32rpx;
  font-weight: bold;
}
.total .item .sub {
  color: #989898;
}
.total .item::before {
  content: '';
  display: block;
  box-sizing: border-box;
  width: 20rpx;
  height: 30rpx;
  border: 16rpx solid #ff881e;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 0;
  position: absolute;
  top: 100%;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  opacity: 0;
}
.total .item.active {
  background-image: linear-gradient(to bottom, #ffc600, #ff881e);
}
.total .item.active .num, .total .item.active .sub {
  color: #fff;
}
.timeBox {
  margin: 30rpx;
}
.timeBox image {
  width: 20rpx;
  margin-left: 10rpx;
}
.timeBox .time {
  font-size: 30rpx;
  font-weight: bold;
}
.timeBox .time .uni-input {
  font-size: 30rpx;
  font-weight: bold;
}
.list {
  padding: 0 30rpx;
  background-color: #fff;
}
.list .item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}
.list .item .left {
  width: 300rpx;
}
.list .item .left .img {
  width: 90rpx;
  margin-right: 20rpx;
}
.list .item .left .title {
  font-size: 32rpx;
}
.list .item .price {
  font-weight: bold;
}
.list .item .price text {
  font-size: 32rpx;
}

