.typeBox {
  padding: 30rpx 80rpx;
}
.typeBox .item {
  line-height: 2.3;
  padding: 0 20rpx;
  border-radius: 50rpx;
  background-color: #fff;
  color: #959595;
  font-size: 28rpx;
}
.typeBox .item.active {
  color: #212121;
  background-color: #FFD200;
}
.list .item {
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  padding: 30rpx;
}
.list .item .img {
  width: 80rpx;
}
.list .item .mess {
  margin-left: 20rpx;
}
.list .item .mess .title {
  font-size: 32rpx;
  margin-right: 10rpx;
  font-weight: bold;
}
.list .item .mess .tag {
  background-color: #FFD200;
  line-height: 1.6;
  padding: 0 16rpx;
  border-radius: 10rpx;
}
.list .item .mess .gray {
  margin-top: 10rpx;
}
.list .item .reda {
  color: #FF581E;
}
.list .item.active .mess .tag {
  background-color: rgba(0, 208, 113, 0.1);
  color: #00C36A;
}

