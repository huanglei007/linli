.typeBox {
  padding: 0 150rpx;
  padding-bottom: 30rpx;
}
.typeBox .item {
  line-height: 2.3;
  padding: 0 40rpx;
  border-radius: 50rpx;
  background-color: #fff;
  color: #959595;
  font-size: 28rpx;
}
.typeBox .item.active {
  color: #FF8D1E;
}
.statusBox {
  margin: 30rpx 50rpx;
}
.statusBox .item {
  width: 100rpx;
  text-align: center;
  padding: 10rpx 20rpx;
  background-color: #fff;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #959595;
}
.statusBox .item.status_active {
  color: #212121;
  background-color: #FFD200;
}
.list .item {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.list .item .top {
  margin: 0 40rpx;
  padding: 20rpx 0 15rpx 0;
  border-bottom: 1rpx solid #eee;
}
.list .item .top .gray {
  color: #999999;
  width: 140rpx;
}
.list .item .mess {
  padding: 20rpx 40rpx;
}
.list .item .mess .gray {
  color: #999999;
  width: 120rpx;
}
.list .item .mess .cont {
  max-width: 520rpx;
}
.list .item .mess .mess-box .left-img {
  width: 130rpx;
  height: 130rpx;
}
.list .item .mess .mess-box .left-img image {
  width: 100%;
  height: 100%;
}
.list .item .mess .mess-box .left-name {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.fontBold {
  font-weight: bold;
}

