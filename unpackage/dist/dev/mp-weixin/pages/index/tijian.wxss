.head {
  position: relative;
}
.head .backs {
  position: absolute;
  z-index: 1;
  width: 35rpx;
  left: 20rpx;
  margin: 0;
}
.head .backs image {
  width: 100%;
}
.head .homeBg {
  width: 100%;
}
.head .homeBg image {
  width: 100%;
}
.order {
  padding: 40rpx;
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  margin-top: -60rpx;
  position: relative;
}
.order .input {
  margin-bottom: 20rpx;
  background-color: #F4F4F4;
  border-radius: 40rpx;
  line-height: 2;
  padding: 16rpx 40rpx;
  color: #8b8b8b;
  font-size: 32rpx;
}
.order .input .uni-input {
  color: #8b8b8b;
  font-size: 32rpx;
}
.order .submit {
  width: 500rpx;
  line-height: 2.3;
  font-size: 36rpx;
  color: #fff;
  background-color: #FF4232;
  text-align: center;
  margin: 20rpx auto;
  border-radius: 50rpx;
}

