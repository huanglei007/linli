.head {
  position: relative;
}
.head .backs {
  position: absolute;
  z-index: 1;
  width: 35rpx;
  left: 20rpx;
  margin: 0;
}
.head .backs image {
  width: 100%;
}
.head .homeBg {
  width: 100%;
}
.head .homeBg image {
  width: 100%;
}
.skillBox {
  padding: 30rpx;
  background-color: #fff;
  height: 300rpx;
}
.skillBox .box {
  flex-wrap: wrap;
}
.skillBox .box .skillitem {
  margin: 0 10rpx;
}
.skillBox .box .skillitem .check {
  background-color: #FFD200;
}
.skillTitle {
  padding: 20rpx 30rpx 0;
  background-color: #fff;
}
.skillTitle .title {
  font-size: 28rpx;
}
.skillTitle .btn {
  background-color: #FFD200;
}
.order {
  padding: 40rpx;
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  margin-top: -60rpx;
  position: relative;
}
.order .bgBox {
  padding: 80rpx 60rpx;
  background-image: url("https://linli-community-api.niuclub.net/image/static/image/img_k.png");
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.order .bgBox .input {
  margin-bottom: 20rpx;
  background-color: #F4F4F4;
  border-radius: 40rpx;
  padding: 16rpx 40rpx;
  color: #8b8b8b;
  font-size: 32rpx;
}
.order .bgBox .input .uni-input {
  color: #8b8b8b;
  font-size: 30rpx;
}
.order .bgBox .zhengjian {
  margin: 40rpx 0;
}
.order .bgBox .zhengjian .title {
  margin-bottom: 20rpx;
  font-size: 30rpx;
}
.order .bgBox .zhengjian .item {
  margin-right: 80rpx;
}
.order .bgBox .zhengjian .item .imageBox {
  width: 180rpx;
}
.order .bgBox .zhengjian .item .imageBox image {
  width: 180rpx;
  height: 180rpx;
}
.order .bgBox .zhengjian label {
  margin-right: 20rpx;
}
.order .bgBox .jineng {
  margin: 40rpx 0;
}
.order .bgBox .jineng .title {
  margin-bottom: 20rpx;
  font-size: 30rpx;
}
.order .bgBox .jineng .imageList {
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}
.order .bgBox .jineng .imageList .item {
  width: 130rpx;
  margin-right: 20rpx;
  height: 130rpx;
  overflow: hidden;
}
.order .bgBox .jineng .imageList .item image {
  width: 100%;
}
.foot {
  width: 70%;
  margin: 30rpx auto;
}
.foot .btn {
  background-color: #FFD200;
  line-height: 2.8;
  text-align: center;
  border-radius: 50rpx;
  font-size: 32rpx;
}
.out {
  display: flex;
  flex-wrap: wrap;
}
.out .peop {
  width: 154rpx;
  height: 154rpx;
  margin-right: 12rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.out .peop image, .out .peop video {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.out .peop .del {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 2rpx;
  right: 2rpx;
}
checkbox .uni-checkbox-input {
  width: 30rpx;
  height: 30rpx;
}
checkbox-group label {
  margin-right: 20rpx;
}

