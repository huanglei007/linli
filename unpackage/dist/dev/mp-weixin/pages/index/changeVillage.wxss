page {
  background-color: #f3f3f3;
}
.head {
  padding: 20rpx 30rpx 20rpx 0;
  background-color: #fff;
}
.head .left {
  font-size: 32rpx;
  font-weight: bold;
}
.head .left image {
  margin-right: 10rpx;
}
.search {
  padding: 30rpx;
}
.search .city {
  font-weight: bold;
  font-size: 30rpx;
}
.search .searchBox {
  background-color: #fff;
  border-radius: 30rpx;
  line-height: 2;
  width: 570rpx;
}
.search .searchBox image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 20rpx;
}
.search .searchBox input {
  width: 350rpx;
}
.search .searchBox .btn {
  width: 130rpx;
  text-align: center;
  background-color: #FFD200;
  border-radius: 30rpx;
  font-size: 30rpx;
}
.mine {
  margin: 0 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}
.mine .title {
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.mine .list .item {
  margin-bottom: 10rpx;
  padding: 30rpx 0;
  border-radius: 10rpx;
}
.mine .list .item .village {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.mine .list .item .address {
  color: #989898;
  max-width: 460rpx;
}
.mine .list .item .btn {
  line-height: 2.3;
  background-color: #03CA7D;
  color: #fff;
  padding: 0 30rpx;
  border-radius: 40rpx;
}
.villageBox {
  margin: 30rpx;
}
.villageBox .title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.villageBox .list .item {
  margin-bottom: 10rpx;
  background-color: #fff;
  padding: 30rpx 20rpx;
  border-radius: 10rpx;
}
.villageBox .list .item .village {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.villageBox .list .item .address {
  color: #989898;
  max-width: 460rpx;
}
.villageBox .list .item .btn {
  line-height: 2.3;
  background-color: #FFD200;
  padding: 0 30rpx;
  border-radius: 40rpx;
}

