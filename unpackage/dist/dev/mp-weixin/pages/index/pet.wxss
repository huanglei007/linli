.banner {
  margin-bottom: 30rpx;
}
.banner .swiper {
  height: 300rpx;
}
.banner .swiper image {
  width: 100%;
}
.searchType {
  padding: 0 30rpx;
}
.searchType .item {
  display: flex;
  align-items: center;
  color: #888;
  font-size: 28rpx;
}
.searchType .item image {
  width: 10rpx;
  margin-left: 10rpx;
}
.searchType .item.back image {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.searchType .item .uni-input {
  color: #888;
  font-size: 28rpx;
}
.searchType .item.active {
  color: #202020;
  border-bottom: 3rpx solid #FFD200;
  font-weight: bold;
}
.searchType .item.active .uni-input {
  color: #202020;
  font-weight: bold;
}
.list {
  margin-top: 30rpx;
}
.cenhead {
  padding: 30rpx;
}
.cenhead image {
  width: 50rpx;
}
.cenhead image.center {
  width: 180rpx;
  margin: 0 20rpx;
}
.cenhead .more {
  color: #888;
}
.cenhead .more image {
  width: 20rpx;
  height: 15rpx;
}
.foot {
  background-image: linear-gradient(to right, #f9db58, #f5c353);
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
