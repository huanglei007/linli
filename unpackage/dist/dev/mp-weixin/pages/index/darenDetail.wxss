page {
  background-color: #f5f5f5;
}
.content {
  padding-bottom: 0;
  position: relative;
}
.content .homeBg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.content .homeBg::after {
  content: '';
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  display: block;
  position: absolute;
  top: 0;
  left: 0;
}
.content .homeBg image {
  width: 100%;
}
.head {
  padding: 20rpx;
}
.head .left {
  font-size: 32rpx;
  font-weight: bold;
}
.head .left image {
  margin-right: 10rpx;
}
.head .shareBox {
  width: 120rpx;
}
.head .shareBox image {
  width: 46rpx;
}
.card {
  height: 100%;
  background-color: #fff;
}
.card .menu {
  padding: 30rpx;
}
.card .menu .item {
  background-color: rgba(255, 88, 30, 0.1);
  padding: 30rpx 20rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}
.card .menu .item .left {
  color: #FF581E;
}
.card .menu .item .left text {
  font-size: 46rpx;
  font-weight: bold;
}
.card .menu .item .center {
  padding-right: 30rpx;
  border-right: 1rpx solid #FF581E;
}
.card .menu .item .center .title {
  color: #FF581E;
  font-size: 30rpx;
}
.card .menu .item .center .time {
  color: #FF581E;
}
.card .menu .item .right {
  text-align: center;
}
.card .menu .item .right .btn {
  background-color: #FF581E;
  color: #fff;
  line-height: 2;
  padding: 0 30rpx;
  border-radius: 30rpx;
  margin-bottom: 10rpx;
}
.card .menu .item .right .btn.active {
  background-color: #fff;
  color: #ff581e;
}
.card .menu .item .right .sub {
  color: #FF581E;
}
.shopMessage {
  margin-top: 80rpx;
  background-color: #fff;
  border-top-right-radius: 50rpx;
  border-top-left-radius: 50rpx;
  position: relative;
  z-index: 1;
  padding: 30rpx;
}
.shopMessage .message {
  width: 500rpx;
}
.shopMessage .call {
  width: 40rpx;
}
.shopMessage .title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.shopMessage .image {
  margin-right: 30rpx;
}
.shopMessage .image image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}
.shopMessage .star {
  margin-left: 10rpx;
}
.shopMessage .star image {
  width: 26rpx;
  margin-right: 4rpx;
}
.typeBox {
  margin-bottom: 2vh;
  background-color: #f5f5f5;
  position: relative;
  z-index: 1;
}
.typeBox .item {
  padding: 0 30rpx;
  font-size: 32rpx;
  line-height: 6vh;
  color: #989898;
  position: relative;
}
.typeBox .item::before {
  content: '';
  display: block;
  width: 50rpx;
  height: 4rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.typeBox .item.active {
  color: #212121;
  font-weight: bold;
}
.typeBox .item.active::before {
  background-color: #FFD200;
}
.foot {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.foot .cost {
  font-size: 28rpx;
}
.foot .cost text {
  font-size: 32rpx;
}
.foot .btn {
  line-height: 2.3;
  font-size: 32rpx;
  background-image: linear-gradient(to right, #f9db58, #f5c353);
  border-radius: 10rpx;
  padding: 0 70rpx;
}
.swiper {
  height: 92vh;
}
.list {
  height: 100vh;
  position: relative;
  z-index: 1;
}
.list .left {
  width: 180rpx;
  background-color: #f5f5f5;
}
.list .left .item {
  line-height: 3;
  text-align: center;
  font-size: 28rpx;
}
.list .left .item.active {
  background-color: #fff;
}
.list .right {
  width: 570rpx;
  background-color: #fff;
}
.list .right .item {
  padding: 30rpx;
  border-bottom: 1rpx solid #ddd;
}
.list .right .item .image {
  width: 160rpx;
  position: relative;
}
.list .right .item .image image {
  width: 160rpx;
  height: 160rpx;
}
.list .right .item .image .renzhen {
  position: absolute;
  width: 70rpx;
  top: 0;
  right: 0;
}
.list .right .item .message {
  width: 320rpx;
}
.list .right .item .message .title {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.list .right .item .message .gray {
  margin-bottom: 20rpx;
}
.list .right .item .message .price text {
  font-size: 40rpx;
}
.list .right .item .message .btn {
  line-height: 2.3;
  padding: 0 40rpx;
  border-radius: 10rpx;
  background-image: linear-gradient(to right, #f9db58, #f5c353);
  font-size: 30rpx;
}
.shopMessBox {
  padding: 40rpx 30rpx;
}
.shopMessBox .title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}
.shopMessBox .sever .tlt {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.shopMessBox .sever .icon {
  width: 40rpx;
  margin-right: 20rpx;
  margin-top: 6rpx;
}
.shopMessBox .sever .icon image {
  width: 100%;
}
.shopMessBox .sever .rich {
  font-size: 28rpx;
  color: #666;
}
.shopMessBox .sever .item {
  margin-bottom: 30rpx;
}

