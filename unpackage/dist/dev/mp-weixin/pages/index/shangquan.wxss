.nearbyshop-segmented {
  padding: 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
}
.nearbyshop-segmented .scroll-view {
  white-space: nowrap;
  width: 82vw;
}
.nearbyshop-segmented .scroll-view .scroll-view-item {
  width: 135rpx;
  display: inline-block;
  text-align: center;
  background-color: #fff;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.nearbyshop-segmented .scroll-view .scroll-view-item .title {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  padding: 12rpx 0rpx;
  color: #666666;
}
.nearbyshop-segmented .scroll-view .scroll-view-item .active {
  color: #FF7827;
  position: relative;
}
.nearbyshop-segmented .screen {
  flex: 1;
  border-radius: 10rpx;
  padding: 12rpx 0;
  background-color: #fff;
  justify-content: center;
  display: flex;
  align-items: center;
}
.nearbyshop-segmented .screen text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 25rpx;
  color: #333333;
}
.nearbyshop-segmented .screen image {
  width: 28rpx;
  height: 28rpx;
}
.list {
  padding: 20rpx 25rpx;
  padding-top: 0;
}
.list .item {
  margin-bottom: 10rpx;
  background-color: #fff;
  padding: 24rpx;
  border-radius: 20rpx;
}
.list .item .image {
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
  position: relative;
}
.list .item .image image {
  width: 100%;
  height: 100%;
}
.list .item .image .renzhen {
  width: 60rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.list .item .message {
  width: 500rpx;
  margin-left: 20rpx;
  position: relative;
}
.list .item .message .title {
  font-size: 32rpx;
  position: relative;
  padding-bottom: 10rpx;
  margin-right: 155rpx;
}
.list .item .message .nickname {
  color: #888;
}
.list .item .message .price {
  color: #888;
}
.list .item .message .range {
  text-align: right;
  position: absolute;
  top: 2rpx;
  right: 0;
}
.list .item .message .range .tab-box {
  color: #999999;
}
.list .item .message .range .tab-box .tab {
  padding: 6rpx 14rpx;
  border: 1px solid #999999;
  border-radius: 8rpx;
}
.list .item .message .range .distance {
  color: #999999;
  padding-top: 12rpx;
}
.list .item .message .range .distance image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 6rpx;
}
.list .item .message .mgb {
  margin-bottom: 10rpx;
}
.list .item .message .text {
  color: #888;
  max-width: 400rpx;
}
.list .item .message .voucher {
  padding-top: 20rpx;
  flex-wrap: wrap;
}
.list .item .message .voucher .piece {
  font-size: 22rpx;
  line-height: 2.2;
  padding: 0 20rpx;
  background-color: #FFF5EC;
  margin-right: 10rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  margin-bottom: 10rpx;
  color: #FF7827;
}
.list .item .message .taketo image {
  width: 32rpx;
  height: 32rpx;
}
.list .item .message .jineng .piece {
  padding: 0 10rpx;
  color: #FF5648;
  border: 2rpx solid #FF5648;
  margin-right: 20rpx;
  flex-wrap: wrap;
  line-height: 1.5;
}
.list .item .message .btn {
  line-height: 2;
  font-size: 28rpx;
  padding: 0 40rpx;
  margin-left: 20rpx;
  border: 2rpx solid #aaa;
  border-radius: 30rpx;
}
.pop-right {
  padding: 0 30rpx;
  padding-bottom: 88rpx;
  padding-top: 88rpx;
}
.pop-right .list-box {
  display: flex;
  flex-wrap: wrap;
  margin: 50rpx 0;
}
.pop-right .list-box .pop-right-list {
  width: 140rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  margin-right: 20rpx;
  color: #333333;
  background-color: #F6F6F6;
}
.pop-right .list-box .active-list {
  color: #FF8D1E;
  background-color: #FFF5EC;
}
.sub {
  width: 100%;
  line-height: 100rpx;
  display: flex;
  text-align: center;
  position: absolute;
  bottom: 0;
  border-top: 1px solid #E9EAEC;
}
.sub .cancel,
.sub .confirm {
  flex: 1;
}
.sub .confirm {
  color: #fff;
  padding-left: 2rpx;
  background: linear-gradient(270deg, #FEB980 0%, #EFD05B 100%);
}

