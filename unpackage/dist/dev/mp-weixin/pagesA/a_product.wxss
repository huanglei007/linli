.product-search {
  padding: 20rpx 50rpx;
  padding-top: 0;
  background-color: #fff;
  position: relative;
}
.product-list {
  margin-top: 14rpx;
}
.product-list .searchType {
  padding-top: 1rpx solid #F5F5F5;
  background-color: #fff;
  padding: 8rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.product-list .searchType .item {
  line-height: 100rpx;
  position: relative;
  font-size: 28rpx;
  text-align: center;
  width: 33.3%;
}
.product-list .searchType .item:last-child {
  color: #666666;
}
.product-list .searchType .item .icon {
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 30rpx;
  opacity: 0;
}
.product-list .searchType .item.active {
  font-size: 32rpx;
  color: #212121;
  font-weight: bold;
}
.product-list .searchType .item.active .icon {
  opacity: 1;
}
.product-list .product-list-box {
  display: flex;
}
.product-list .product-list-box .type {
  width: 212rpx;
  text-align: center;
  background-color: #F5F6FA;
  overflow-y: scroll;
  padding-top: 10rpx;
  padding-bottom: 100rpx;
}
.product-list .product-list-box .type .type-list {
  color: #666666;
  position: relative;
  padding: 40rpx 0;
}
.product-list .product-list-box .type .type-list image {
  width: 24rpx;
  height: 24rpx;
}
.product-list .product-list-box .type .type-list .edit {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.product-list .product-list-box .type .type-list .delete {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}
.product-list .product-list-box .type .active {
  background-color: #fff;
}
.product-list .product-list-box .type .new-type {
  display: flex;
  justify-content: center;
  align-items: center;
}
.product-list .product-list-box .type .new-type .icon32 {
  margin-right: 10rpx;
}
.product-list .product-list-box .right-box {
  flex: 1;
  height: calc(100vh - 450rpx);
  height: calc(100vh - 250rpx);
  padding: 12rpx 30rpx;
  background-color: #fff;
  overflow-y: scroll;
  padding-bottom: 100rpx;
}
.product-list .product-list-box .right-box .noData {
  text-align: center;
  padding-top: 100rpx;
}
.product-list .product-list-box .right-box .products {
  display: flex;
  justify-content: space-between;
  margin-bottom: 70rpx;
  position: relative;
}
.product-list .product-list-box .right-box .products .product-logo {
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  background-color: #CCCCCC;
  border-radius: 12rpx;
  position: relative;
  overflow: hidden;
}
.product-list .product-list-box .right-box .products .product-logo .xiangji {
  width: 60rpx;
  height: 60rpx;
  margin-top: 30rpx;
}
.product-list .product-list-box .right-box .products .product-logo .logo {
  width: 100%;
  height: 100%;
}
.product-list .product-list-box .right-box .products .product-logo .black {
  width: 100%;
  height: 100%;
  background: rgba(51, 51, 51, 0.55);
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.product-list .product-list-box .right-box .products .product-logo .black text {
  color: #fff;
  letter-spacing: 8rpx;
}
.product-list .product-list-box .right-box .products .product-news {
  flex: 1;
  padding-left: 25rpx;
}
.product-list .product-list-box .right-box .products .product-news .stock {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.product-list .product-list-box .right-box .products .product-news .stock .del,
.product-list .product-list-box .right-box .products .product-news .stock .add {
  height: 100%;
  padding: 6rpx 22rpx;
  background: #F5F5F5;
}
.product-list .product-list-box .right-box .products .product-news .stock .input {
  flex: 1;
  margin: 0 10rpx;
  text-align: center;
}
.product-list .product-list-box .right-box .products .product-news .stock text {
  margin-right: 10rpx;
}
.product-list .product-list-box .right-box .products .product-news .price-input {
  color: #FF6000;
  font-size: 42rpx;
  position: relative;
  padding-left: 35rpx;
}
.product-list .product-list-box .right-box .products .product-news .price-input:before {
  content: 'Â¥';
  display: flex;
  align-items: center;
  position: absolute;
  height: 100%;
  top: 0rpx;
  left: 5rpx;
}
.product-list .product-list-box .right-box .products .product-news .meth {
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
}
.product-list .product-list-box .right-box .products .product-news .meth .sale text {
  color: #666666;
}
.product-list .product-list-box .right-box .products .product-news .handel {
  padding-bottom: 10rpx;
}
.product-list .product-list-box .right-box .products .product-news .handel .delete {
  margin-right: 15rpx;
  padding: 9rpx 20rpx;
  border-radius: 21rpx;
  border: 1px solid #979797;
}
.product-list .product-list-box .right-box .products .product-news .handel .shelf {
  color: #FF6000;
  padding: 9rpx 20rpx;
  border-radius: 21rpx;
  border: 1px solid #FF6000;
}
.product-list .product-list-box .right-box .products .product-news input {
  padding: 6rpx 15rpx;
  background-color: #F5F5F5;
}
.add-product,
.save-product {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 -2px 5px -1px #888888;
  z-index: 2;
}
.add-product {
  width: calc(100vw - 212rpx);
  position: fixed;
  bottom: 0;
  right: 0;
  background-color: #fff;
}
.add-product .icon32 {
  margin-right: 10rpx;
}
.save-product {
  width: 212rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: linear-gradient(180deg, #FDEC7E 0%, #F9D448 100%);
}
.product-popup {
  width: 530rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.type-popup {
  width: 530rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.type-popup .popup-add,
.type-popup .popup-edit,
.type-popup .popup-delete {
  padding: 35rpx 60rpx;
}
.type-popup .popup-add .title,
.type-popup .popup-edit .title,
.type-popup .popup-delete .title {
  text-align: center;
  margin-bottom: 35rpx;
}
.type-popup .popup-add .valuebox input,
.type-popup .popup-edit .valuebox input,
.type-popup .popup-delete .valuebox input {
  padding: 25rpx 35rpx;
  border: 1px solid #CCCCCC;
  border-radius: 10rpx;
}
.type-popup .popup-delete .deleteText {
  padding: 30rpx 0;
  text-align: center;
}
.product-popup .title {
  padding: 65rpx 0;
  text-align: center;
}
.product-popup-submit,
.type-popup-submit {
  display: flex;
  border-top: 1px solid #F6F6F6;
}
.product-popup-submit .cancel,
.type-popup-submit .cancel {
  flex: 1;
  background-color: #fff;
  color: #0091FF;
  border-right: 1prx solid #F6F6F6;
}
.product-popup-submit .confirm,
.type-popup-submit .confirm {
  flex: 1;
  background-color: #fff;
  color: #0091FF;
  border-left: 1prx solid #F6F6F6;
}

