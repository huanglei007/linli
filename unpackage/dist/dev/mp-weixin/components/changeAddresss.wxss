.add-btn {
  width: 90%;
  height: 70rpx;
  line-height: 70rpx;
  background: #ddd;
  border-radius: 10rpx;
  font-size: 30rpx;
  font-weight: normal;
  margin: 50rpx auto 50rpx;
}
.scroll-view_H {
  box-sizing: border-box;
  max-height: 400rpx;
}
.pag {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}
.pag .bg {
  background-color: rgba(0, 0, 0, 0.3);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.pag .list {
  background-color: #fff;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  max-height: 60%;
  z-index: 1;
  padding: 20rpx;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
  box-sizing: border-box;
}
.pag .list .title {
  position: relative;
}
.pag .list .title .texcenter {
  font-size: 28rpx;
}
.pag .list .title .icon {
  position: absolute;
  right: 0;
  top: 0;
}
.pag .list .title .icon image {
  width: 30rpx;
}
.pag .list .wrapper {
  margin-bottom: 20rpx;
  padding: 31rpx;
  position: relative;
}
.pag .list .wrapper .address-box .titas {
  height: 34rpx;
  line-height: 34rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
}
.pag .list .wrapper .address-box .moren {
  width: 64rpx;
  height: 32rpx;
  border: 1rpx solid #FFD200;
  border-radius: 4rpx;
  line-height: 32rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  margin-left: 21rpx;
}
.pag .list .wrapper .shengray {
  width: 90%;
  margin-top: 18rpx;
}
.pag .list .wrapper .bianji {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0;
  right: 35rpx;
  bottom: 0;
  margin: auto;
}

