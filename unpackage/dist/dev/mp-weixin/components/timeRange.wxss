.list {
  background-color: #fff;
  z-index: 1;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
  box-sizing: border-box;
}
.list .listBox {
  height: 400rpx;
}
.list .listBox scroll-view {
  height: 100%;
}
.list .listBox .left {
  background-color: #f5f5f5;
  width: 30%;
}
.list .listBox .left .item {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
}
.list .listBox .left .item.active {
  background-color: #fff;
}
.list .listBox .right {
  background-color: #fff;
  width: 70%;
}
.list .listBox .right .item {
  padding: 0 30rpx;
}
.list .listBox .right .item .text {
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.list .listBox .right .item image {
  width: 24rpx;
  height: 24rpx;
  display: none;
}
.list .listBox .right .item.active {
  background-color: #f5f5f5;
}
.title view {
  font-size: 28rpx;
  padding: 20rpx 30rpx;
}
.title .blue {
  color: #007AFF;
}

