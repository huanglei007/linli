.list .item {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 30rpx 40rpx;
}
.list .item .image {
  width: 120rpx;
  overflow: hidden;
  position: relative;
}
.list .item .image image {
  border-radius: 50%;
  width: 120rpx;
  height: 120rpx;
}
.list .item .image .renzhen {
  width: 80rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.list .item .message {
  flex: 1;
  margin-left: 20rpx;
}
.list .item .message .top-box .box-title {
  flex: 1;
  margin-right: 30rpx;
  overflow: hidden;
}
.list .item .message .top-box .box-title .title {
  position: relative;
  padding-right: 15rpx;
}
.list .item .message .top-box .box-title .title .font32 {
  font-weight: bold;
  width: -webkit-fit-content;
  width: fit-content;
  padding-right: 7rpx;
}
.list .item .message .top-box .box-title .title .type {
  font-size: 24rpx;
  color: #144ed5;
}
.list .item .message .min-box {
  padding: 20rpx 0;
}
.list .item .message .min-box .price {
  color: #FF3336;
}
.list .item .message .min-box .price text {
  font-size: 32rpx;
  font-weight: bold;
}
.list .item .message .bottom-box .btn {
  line-height: 1.5;
  font-size: 24rpx;
  padding: 10rpx 5rpx;
  margin-left: 20rpx;
  background-color: #FFD200;
  border-radius: 30rpx;
  width: 90rpx;
  text-align: center;
}
.list .item .message .bottom-box .btn image {
  width: 28rpx;
  height: 28rpx;
  margin: 0 auto;
}
.urgent {
  color: #e43d33;
}

